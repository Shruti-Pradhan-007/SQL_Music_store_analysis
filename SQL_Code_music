/*

Music Store Data Exploration

*/

-- Q1. Find the top 10 countries with highest number of customer engagement.

select COUNT(invoice_id) AS Invoice_count
  , billing_country
from 
	invoice
group by
	billing_country
ORDER BY
	Invoice_count DESC
LIMIT 10;


-- Q2. The company would like to have an event in the country which has the highest sales.

SELECT billing_country AS Country
	, ROUND(SUM(total),2) AS Sales
FROM
	invoice
GROUP BY 
	Country
ORDER BY
	Sales DESC
LIMIT 1;



